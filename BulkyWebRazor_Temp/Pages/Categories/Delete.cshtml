@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
}

<form method="post">
    <input asp-for="Category.Id" type="hidden" />
    <div class="border p-3 m4-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row ">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" disabled class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" disabled class="text-danger"></span>
        </div>


        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="/category/Index " class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>
